extends layout

block content
     .my-3.my-md-5 
        .container
            .col-md-12
                h1 Update User Page
                != messages('message',locals)
                .row
                    .col-md-12
                        form.card(method="POST", id="updateForm", action="/users/edit/"+user._id)
                                .card-body
                                    h3.card-title Update User
                                    .row
                                        .col-md-6
                                                .form-group
                                                    label.form-label First Name
                                                    input.form-control(name='firstName', type='text', value=user.name.firstName)
                                        .col-md-6
                                                .form-group
                                                    label.form-label Last Name 
                                                    input.form-control(name='lastName', type='text', value=user.name.lastName)
                                        .col-md-12
                                                .form-group
                                                    label.form-label Email Address
                                                    input.form-control(name='email', type='email', value=user.email)
                                        .col-md-12
                                                .form-group
                                                    label.custom-switch
                                                        input.custom-switch-input(type='checkbox', name='passwordReset' value="true" checked)
                                                        span.custom-switch-indicator
                                                        span.custom-switch-description Reset User Password
                                .card-footer.d-flex
                                    button.btn.btn-dark(type='reset') Cancel
                                    button.btn.btn-warning.ml-auto(type="button" data-toggle='modal', data-target='#updateModal') update User
            
            //- Modal
            #updateModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='updateModal', aria-hidden='true')
                .modal-dialog.modal-dialog-centered.modal-sm(role='document')
                    .modal-content
                        .modal-header
                                h5#exampleModalLongTitle.modal-title Update User
                                button.close(type='button', data-dismiss='modal', aria-label='Close')
                                    span(aria-hidden='true')
                        .modal-body
                            .alert.alert-warning(role='alert')
                                | Do you really want to proceed with the update ?
                        .modal-footer
                            .text-center
                                button.btn.btn-warning(type='submit' form="updateForm") update User